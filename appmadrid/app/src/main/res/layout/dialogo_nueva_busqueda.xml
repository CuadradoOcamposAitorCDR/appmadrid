<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.buscar.dialogoNuevaBusqueda">


    <EditText
        android:id="@+id/editText_busquedaFecha"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginStart="108dp"
        android:ems="10"
        android:hint="@string/busqueda_fecha"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/editText_busquedaTitulo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/spinner_busquedaGratutito"
        app:layout_constraintTop_toTopOf="@+id/spinner_busquedaGratutito" />

    <EditText
        android:id="@+id/editText_busquedaTitulo"
        android:layout_width="323dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/busqueda_titulo"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner_busquedaGratutito"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/editText_busquedaTitulo"
        app:layout_constraintTop_toBottomOf="@+id/editText_busquedaTitulo" />

</androidx.constraintlayout.widget.ConstraintLayout>